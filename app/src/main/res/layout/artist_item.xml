<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/rectangle">

    <TextView
        android:id="@+id/x_artist_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="195dp"
        android:text="Mike"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/x_profile_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x_artist_rating"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        android:text="8.8/10"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/x_artist_city"
        app:layout_constraintEnd_toStartOf="@+id/x_profile_button"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/x_artist_name" />

    <TextView
        android:id="@+id/x_artist_genre"
        android:layout_width="80dp"
        android:layout_height="19dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        android:text="Hip-Hop"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/x_artist_rating"
        app:layout_constraintEnd_toStartOf="@+id/x_profile_button"
        app:layout_constraintStart_toEndOf="@+id/x_artist_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x_artist_city"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="12dp"
        android:text="Hamburg"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/x_profile_button"
        app:layout_constraintStart_toEndOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/x_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="26dp"
        android:text="Zum Profil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>